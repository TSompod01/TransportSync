{
  "name": "transport-sync-electron",
  "version": "1.0.0",
  "description": "Transport Finance Sync App - Electron + React (Prototype)",
  "main": "main.js",
  "scripts": {
    "start": "concurrently \"vite\" \"electron .\"",
    "build:ui": "vite build",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.transport.sync",
    "productName": "TransportSync",
    "files": [
      "dist/**",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    }
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.6.0",
    "concurrently": "^8.0.0",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}